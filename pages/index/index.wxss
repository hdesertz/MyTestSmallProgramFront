.reg-area{
  margin-top: 100rpx;
  border-color: transparent;
  box-shadow: 0 0 40px rgba(0,0,0,.05);
  background-color: #fff;
  align-self: center;
}
.reg-line{
  margin-bottom: 40rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  padding: 10rpx;
}
.reg-line-label{
  display: inline;
  text-align: right;
}
.reg-line-input{
  border: 2rpx solid #ccc;
  font-size: 20rpx;
  display: inline-block;
  line-height: 80rpx;
  vertical-align: middle;
  width: 400rpx;
  text-align: left;
  text-indent: 10rpx;
}
.reg-line-input:focus{
  border:4rpx solid red;
}

.nav-list {
  width: 100%;
  text-align: center;
  line-height: 84rpx;
  white-space: nowrap;
  position: relative;
  overflow-x: scroll;
}

.nav-item {
  transition: all 0.2s;
  height: 84rpx;
  display: inline-block;
  color: #777;
  font-size: 28rpx;
  width: 120rpx;
}

.nav-item.active {
  border-bottom: 6rpx solid #f00;
}

.post-list {
  font-size: 30rpx;
}

.post-item {
  padding: 20rpx;
  border-bottom: 2rpx solid #bcbab6;
}

.post-item .title-area {
  display: flex;
  align-items: center;
  min-width: 0;
}

.post-item .title-area .flag {
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 0 10rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  flex-shrink: 0;
  box-sizing: border-box;
}

.post-item .title-area .title {
  margin: 0 0 0 16rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.post-item .misc {
  display: flex;
  position: relative;
  font-size: 26rpx;
  margin-top: 16rpx;
}

.post-item .misc .avatar {
  width: 72rpx;
  height: 72rpx;
  flex-shrink: 0;
  border-radius: 50%;
  overflow: hidden;
}

.post-item .misc .right {
  flex: 1;
  min-width: 0;
  margin-left: 16rpx;
}

.post-item .misc .right .misc-right-top {
  display: flex;
  justify-content: space-between;
}

.post-item .misc .right .misc-right-bottom {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
}

.post-item .misc .avatar .avatar-img {
  width: 100%;
  height: 100%;
}

.view-reply-count .reply-count {
  color: #80bd01;
}

.label-top {
  background-color: #80bd01;
  color: #fff;
}

.label-other {
  background-color: #e3e3e3;
  color: #333;
}
