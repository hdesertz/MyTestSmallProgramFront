@import "./../../wxParse/wxParse.wxss";
.article-wrap {
  background-color: #f5f5d5;
  font-size: 28rpx;
}

.article-wrap .head-box {
  padding: 28rpx;
  background: #fff;
}

.article-wrap .head-box .head-title {
  font-size: 36rpx;
  margin: 0;
}

.article-wrap .head-box .head-intro {
  display: flex;
  margin-top: 16rpx;
  align-items: center;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  flex-shrink: 0;
  border-radius: 50%;
  overflow: hidden;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.article-wrap .head-box .head-intro .head-middle {
  flex: 1;
  margin-left: 20rpx;
}

.article-wrap .head-box .head-intro .head-middle .head-middle-top {
  display: flex;
  align-items: center;
}


.head-middle .head-middle-top .head-author-name {
  font-size: 28rpx;
  margin-left: 16rpx;
}

.head-middle .head-middle-bottom {
  line-height: 40rpx;
  font-size: 26rpx;
  color: #666;
  margin-top: 4rpx;
}

.head-right {
  width: 72rpx;
  flex-shrink: 0;
  text-align: center;
  font-size: 32rpx;
}
.head-right .collect-icon{
  font-size: 40rpx;
}
.article-wrap .content-box {
  padding: 0 28rpx;
  background: #fff;
  box-shadow: 0 4rpx 4rpx #cecece;
}

.article-wrap .comment-box {
  margin-top: 16rpx;
  background: #fff;
}
.collect-icon.active{
  color: red;
}